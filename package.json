{
  "name": "sukhum-road",
  "description": "Sukhum's transport",
  "author": "David Kistauri",
  "keywords": [
    "sukhum",
    "abkhazia",
    "transport",
    "database"
  ],
  "license": "ISC",
  "main": "index.html",
  "scripts": {
    "start": "parcel src/index.pug --open",
    "lint": "stylelint src/*/*.sss",
    "clean": "rm -rf dist/",
    "build": "parcel build src/index.pug -d build",
    "deploy": "npm run lint && npm run build && cd build && now --prod"
  },
  "version": "1.0.0",
  "devDependencies": {
    "@size-limit/preset-app": "^2.2.2",
    "cssnano": "^4.1.10",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "postcss-mixins": "^6.2.3",
    "precss": "^4.0.0",
    "pug": "^2.0.4",
    "stylelint": "^13.2.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^4.0.0"
  },
  "dependencies": {},
  "size-limit": [
    {
      "path": "build/index.html",
      "limit": "2 KB"
    }
  ],
  "stylelint": {
    "plugins": [
      "stylelint-order"
    ],
    "extends": [
      "stylelint-config-rational-order"
    ],
    "rules": {
      "plugin/rational-order": [
        true,
        {
          "empty-line-between-groups": true
        }
      ],
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "define-mixin",
            "mixin"
          ]
        }
      ],
      "color-named": "never",
      "order/order": [
        "declarations",
        {
          "type": "at-rule",
          "name": "media"
        },
        {
          "type": "rule",
          "selector": "^&::(before|after)"
        },
        {
          "type": "rule",
          "selector": "^&:\\w"
        },
        {
          "type": "rule",
          "selector": "^&_"
        },
        {
          "type": "rule",
          "selector": "^."
        }
      ]
    }
  }
}
